{
    "testEnvironment": "node",
    "transform": {
        "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
        "ts",
        "js",
        "json",
        "node"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
        "src/**/*.{ts,js}",
        "!src/**/*.d.ts"
    ],
    "coverageReporters": [
        "json-summary",
        "text",
        "lcov"
      ]
}
